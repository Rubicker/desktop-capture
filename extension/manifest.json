{
  "name": "Desktop Capture",
  "description": "Allow you to capture your desktop for use in video apps",
  "version": "0.1.0",
  "manifest_version": 2,
  "background": {
    "scripts": ["extension.js"],
    // 按需加载，不停留驻存
    "persistent": false
  },
  // 可以获取来自该网址的信息
  "externally_connectable": {
    "matches": ["*://localhost/*"]
  },
  "permissions": ["desktopCapture"]
}